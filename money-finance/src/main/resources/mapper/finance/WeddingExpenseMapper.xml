<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.make.finance.mapper.WeddingExpenseMapper">

    <resultMap type="WeddingExpense" id="WeddingExpenseResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="weddingName" column="wedding_name"/>
        <result property="weddingDate" column="wedding_date"/>
        <result property="weddingCity" column="wedding_city"/>
        <result property="expenseCategory" column="expense_category"/>
        <result property="expenseItem" column="expense_item"/>
        <result property="amount" column="amount"/>
        <result property="paymentDate" column="payment_date"/>
        <result property="payee" column="payee"/>
        <result property="notes" column="notes"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="createdBy" column="created_by"/>
    </resultMap>

    <sql id="selectWeddingExpenseVo">
        select id,
               user_id,
               wedding_name,
               wedding_date,
               wedding_city,
               expense_category,
               expense_item,
               amount,
               payment_date,
               payee,
               notes,
               created_at,
               updated_at,
               created_by
        from wedding_expense
    </sql>

    <select id="selectWeddingExpenseList" parameterType="WeddingExpense" resultMap="WeddingExpenseResult">
        <include refid="selectWeddingExpenseVo"/>
        <where>
            <if test="weddingName != null  and weddingName != ''">and wedding_name like concat('%', #{weddingName},
                '%')
            </if>
            <if test="weddingDate != null ">and wedding_date = #{weddingDate}</if>
            <if test="weddingCity != null  and weddingCity != ''">and wedding_city = #{weddingCity}</if>
            <if test="expenseCategory != null  and expenseCategory != ''">and expense_category = #{expenseCategory}</if>
            <if test="expenseItem != null  and expenseItem != ''">and expense_item = #{expenseItem}</if>
            <if test="amount != null ">and amount = #{amount}</if>
            <if test="paymentDate != null ">and payment_date = #{paymentDate}</if>
            <if test="payee != null  and payee != ''">and payee = #{payee}</if>
            <if test="notes != null  and notes != ''">and notes = #{notes}</if>
            <if test="updatedAt != null ">and updated_at = #{updatedAt}</if>
        </where>
    </select>

    <select id="selectWeddingExpenseById" parameterType="Long" resultMap="WeddingExpenseResult">
        <include refid="selectWeddingExpenseVo"/>
        where id = #{id}
    </select>

    <insert id="insertWeddingExpense" parameterType="WeddingExpense" useGeneratedKeys="true" keyProperty="id">
        insert into wedding_expense
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="weddingName != null">wedding_name,</if>
            <if test="weddingDate != null">wedding_date,</if>
            <if test="weddingCity != null">wedding_city,</if>
            <if test="expenseCategory != null and expenseCategory != ''">expense_category,</if>
            <if test="expenseItem != null">expense_item,</if>
            <if test="amount != null">amount,</if>
            <if test="paymentDate != null">payment_date,</if>
            <if test="payee != null">payee,</if>
            <if test="notes != null">notes,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
            <if test="createdBy != null">created_by,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="weddingName != null">#{weddingName},</if>
            <if test="weddingDate != null">#{weddingDate},</if>
            <if test="weddingCity != null">#{weddingCity},</if>
            <if test="expenseCategory != null and expenseCategory != ''">#{expenseCategory},</if>
            <if test="expenseItem != null">#{expenseItem},</if>
            <if test="amount != null">#{amount},</if>
            <if test="paymentDate != null">#{paymentDate},</if>
            <if test="payee != null">#{payee},</if>
            <if test="notes != null">#{notes},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="createdBy != null">#{createdBy},</if>
        </trim>
    </insert>

    <update id="updateWeddingExpense" parameterType="WeddingExpense">
        update wedding_expense
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="weddingName != null">wedding_name = #{weddingName},</if>
            <if test="weddingDate != null">wedding_date = #{weddingDate},</if>
            <if test="weddingCity != null">wedding_city = #{weddingCity},</if>
            <if test="expenseCategory != null and expenseCategory != ''">expense_category = #{expenseCategory},</if>
            <if test="expenseItem != null">expense_item = #{expenseItem},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="paymentDate != null">payment_date = #{paymentDate},</if>
            <if test="payee != null">payee = #{payee},</if>
            <if test="notes != null">notes = #{notes},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="createdBy != null">created_by = #{createdBy},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteWeddingExpenseById" parameterType="Long">
        delete
        from wedding_expense
        where id = #{id}
    </delete>

    <delete id="deleteWeddingExpenseByIds" parameterType="String">
        delete from wedding_expense where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>