<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.make.finance.mapper.UserAccountsMapper">

    <resultMap type="UserAccounts" id="UserAccountsResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="bankCardNumber" column="bank_card_number"/>
        <result property="bankCardStatus" column="bank_card_status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="selectUserAccountsVo">
        select id, user_id, bank_card_number, bank_card_status, created_at, updated_at
        from user_accounts
    </sql>

    <select id="selectUserAccountsList" parameterType="UserAccounts" resultMap="UserAccountsResult">
        <include refid="selectUserAccountsVo"/>
        <where>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="bankCardNumber != null  and bankCardNumber != ''">and bank_card_number = #{bankCardNumber}</if>
            <if test="bankCardStatus != null  and bankCardStatus != ''">and bank_card_status = #{bankCardStatus}</if>
            <if test="updatedAt != null ">and updated_at = #{updatedAt}</if>
        </where>
    </select>

    <select id="selectUserAccountsById" parameterType="Long" resultMap="UserAccountsResult">
        <include refid="selectUserAccountsVo"/>
        where id = #{id}
    </select>

    <insert id="insertUserAccounts" parameterType="UserAccounts" useGeneratedKeys="true" keyProperty="id">
        insert into user_accounts
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="bankCardNumber != null">bank_card_number,</if>
            <if test="bankCardStatus != null">bank_card_status,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="bankCardNumber != null">#{bankCardNumber},</if>
            <if test="bankCardStatus != null">#{bankCardStatus},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>

    <update id="updateUserAccounts" parameterType="UserAccounts">
        update user_accounts
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="bankCardNumber != null">bank_card_number = #{bankCardNumber},</if>
            <if test="bankCardStatus != null">bank_card_status = #{bankCardStatus},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUserAccountsById" parameterType="Long">
        delete
        from user_accounts
        where id = #{id}
    </delete>

    <delete id="deleteUserAccountsByIds" parameterType="String">
        delete from user_accounts where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>