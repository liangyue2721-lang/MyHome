<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.make.finance.mapper.TransactionCategoriesMapper">
    
    <resultMap type="TransactionCategories" id="TransactionCategoriesResult">
        <result property="id"    column="id"    />
        <result property="categoryName"    column="category_name"    />
        <result property="keyword"    column="keyword"    />
        <result property="category"    column="category"    />
        <result property="updatedAt"    column="updated_at"    />
    </resultMap>

    <sql id="selectTransactionCategoriesVo">
        select id, category_name, keyword, category, updated_at
        from transaction_categories
    </sql>

    <select id="selectTransactionCategoriesList" parameterType="TransactionCategories" resultMap="TransactionCategoriesResult">
        <include refid="selectTransactionCategoriesVo"/>
        <where>  
            <if test="categoryName != null  and categoryName != ''"> and category_name like concat('%', #{categoryName}, '%')</if>
            <if test="keyword != null  and keyword != ''"> and keyword = #{keyword}</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>
    
    <select id="selectTransactionCategoriesById" parameterType="Long" resultMap="TransactionCategoriesResult">
        <include refid="selectTransactionCategoriesVo"/>
        where id = #{id}
    </select>

    <insert id="insertTransactionCategories" parameterType="TransactionCategories" useGeneratedKeys="true" keyProperty="id">
        insert into transaction_categories
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryName != null">category_name,</if>
            <if test="keyword != null">keyword,</if>
            <if test="category != null">category,</if>
            <if test="updatedAt != null">updated_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryName != null">#{categoryName},</if>
            <if test="keyword != null">#{keyword},</if>
            <if test="category != null">#{category},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
         </trim>
    </insert>

    <update id="updateTransactionCategories" parameterType="TransactionCategories">
        update transaction_categories
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryName != null">category_name = #{categoryName},</if>
            <if test="keyword != null">keyword = #{keyword},</if>
            <if test="category != null">category = #{category},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTransactionCategoriesById" parameterType="Long">
        delete from transaction_categories where id = #{id}
    </delete>

    <delete id="deleteTransactionCategoriesByIds" parameterType="String">
        delete from transaction_categories where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>