<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.make.quartz.mapper.SysJobRuntimeMapper">
    
    <resultMap type="SysJobRuntime" id="SysJobRuntimeResult">
        <result property="id"    column="id"    />
        <result property="jobId"    column="job_id"    />
        <result property="jobName"    column="job_name"    />
        <result property="jobGroup"    column="job_group"    />
        <result property="executionId"    column="execution_id"    />
        <result property="status"    column="status"    />
        <result property="nodeId"    column="node_id"    />
        <result property="scheduledTime"    column="scheduled_time"    />
        <result property="enqueueTime"    column="enqueue_time"    />
        <result property="startTime"    column="start_time"    />
        <result property="retryCount"    column="retry_count"    />
        <result property="maxRetry"    column="max_retry"    />
        <result property="payload"    column="payload"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSysJobRuntimeVo">
        select id, job_id, job_name, job_group, execution_id, status, node_id, scheduled_time, enqueue_time, start_time, retry_count, max_retry, payload, create_time, update_time from sys_job_runtime
    </sql>

    <select id="selectSysJobRuntimeList" parameterType="SysJobRuntime" resultMap="SysJobRuntimeResult">
        <include refid="selectSysJobRuntimeVo"/>
        <where>  
            <if test="jobId != null "> and job_id = #{jobId}</if>
            <if test="jobName != null  and jobName != ''"> and job_name like concat('%', #{jobName}, '%')</if>
            <if test="jobGroup != null  and jobGroup != ''"> and job_group = #{jobGroup}</if>
            <if test="executionId != null  and executionId != ''"> and execution_id = #{executionId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="nodeId != null  and nodeId != ''"> and node_id = #{nodeId}</if>
            <if test="scheduledTime != null "> and scheduled_time = #{scheduledTime}</if>
            <if test="enqueueTime != null "> and enqueue_time = #{enqueueTime}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="retryCount != null "> and retry_count = #{retryCount}</if>
            <if test="maxRetry != null "> and max_retry = #{maxRetry}</if>
            <if test="payload != null  and payload != ''"> and payload = #{payload}</if>
        </where>
    </select>
    
    <select id="selectSysJobRuntimeById" parameterType="Long" resultMap="SysJobRuntimeResult">
        <include refid="selectSysJobRuntimeVo"/>
        where id = #{id}
    </select>

    <insert id="insertSysJobRuntime" parameterType="SysJobRuntime" useGeneratedKeys="true" keyProperty="id">
        insert into sys_job_runtime
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="jobId != null">job_id,</if>
            <if test="jobName != null and jobName != ''">job_name,</if>
            <if test="jobGroup != null">job_group,</if>
            <if test="executionId != null and executionId != ''">execution_id,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="nodeId != null">node_id,</if>
            <if test="scheduledTime != null">scheduled_time,</if>
            <if test="enqueueTime != null">enqueue_time,</if>
            <if test="startTime != null">start_time,</if>
            <if test="retryCount != null">retry_count,</if>
            <if test="maxRetry != null">max_retry,</if>
            <if test="payload != null">payload,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="jobId != null">#{jobId},</if>
            <if test="jobName != null and jobName != ''">#{jobName},</if>
            <if test="jobGroup != null">#{jobGroup},</if>
            <if test="executionId != null and executionId != ''">#{executionId},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="nodeId != null">#{nodeId},</if>
            <if test="scheduledTime != null">#{scheduledTime},</if>
            <if test="enqueueTime != null">#{enqueueTime},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="retryCount != null">#{retryCount},</if>
            <if test="maxRetry != null">#{maxRetry},</if>
            <if test="payload != null">#{payload},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysJobRuntime" parameterType="SysJobRuntime">
        update sys_job_runtime
        <trim prefix="SET" suffixOverrides=",">
            <if test="jobId != null">job_id = #{jobId},</if>
            <if test="jobName != null and jobName != ''">job_name = #{jobName},</if>
            <if test="jobGroup != null">job_group = #{jobGroup},</if>
            <if test="executionId != null and executionId != ''">execution_id = #{executionId},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="nodeId != null">node_id = #{nodeId},</if>
            <if test="scheduledTime != null">scheduled_time = #{scheduledTime},</if>
            <if test="enqueueTime != null">enqueue_time = #{enqueueTime},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="retryCount != null">retry_count = #{retryCount},</if>
            <if test="maxRetry != null">max_retry = #{maxRetry},</if>
            <if test="payload != null">payload = #{payload},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysJobRuntimeById" parameterType="Long">
        delete from sys_job_runtime where id = #{id}
    </delete>

    <delete id="deleteSysJobRuntimeByIds" parameterType="String">
        delete from sys_job_runtime where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="countRunningOrWaiting" parameterType="Long" resultType="int">
        select count(1) from sys_job_runtime
        where job_id = #{jobId}
        and status in ('WAITING', 'RUNNING')
    </select>

    <update id="updateStatusToRunning">
        update sys_job_runtime
        set status = 'RUNNING',
            node_id = #{nodeId},
            start_time = sysdate()
        where execution_id = #{executionId}
        and status = 'WAITING'
    </update>

    <delete id="deleteByExecutionId" parameterType="String">
        delete from sys_job_runtime where execution_id = #{executionId}
    </delete>

    <select id="selectSysJobRuntimeByExecutionId" parameterType="String" resultMap="SysJobRuntimeResult">
        <include refid="selectSysJobRuntimeVo"/>
        where execution_id = #{executionId}
    </select>

    <select id="selectActiveJobs" resultMap="SysJobRuntimeResult">
        <include refid="selectSysJobRuntimeVo"/>
        where status in ('WAITING', 'RUNNING')
    </select>

    <select id="countByStatus" parameterType="String" resultType="int">
        select count(1) from sys_job_runtime where status = #{status}
    </select>

</mapper>