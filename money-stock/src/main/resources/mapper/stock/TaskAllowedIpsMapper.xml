    <sql id="selectTaskAllowedIpsVo">
        select id, allowed_ip, cidr_mask, description, status, is_active, state, created_at, updated_at from task_allowed_ips
    </sql>

    <select id="selectTaskAllowedIpsList" parameterType="TaskAllowedIps" resultMap="TaskAllowedIpsResult">
        <include refid="selectTaskAllowedIpsVo"/>
        <where>
            <if test="allowedIp != null  and allowedIp != ''"> and allowed_ip = #{allowedIp}</if>
            <if test="cidrMask != null  and cidrMask != ''"> and cidr_mask = #{cidrMask}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="isActive != null "> and is_active = #{isActive}</if>
            <if test="state != null  and state != ''"> and state = #{state}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>

    <select id="selectTaskAllowedIpsById" parameterType="String" resultMap="TaskAllowedIpsResult">
        <include refid="selectTaskAllowedIpsVo"/>
        where id = #{id}
    </select>

    <insert id="insertTaskAllowedIps" parameterType="TaskAllowedIps" useGeneratedKeys="true" keyProperty="id">
        insert into task_allowed_ips
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="allowedIp != null and allowedIp != ''">allowed_ip,</if>
            <if test="cidrMask != null">cidr_mask,</if>
            <if test="description != null">description,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="isActive != null">is_active,</if>
            <if test="state != null and state != ''">state,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="allowedIp != null and allowedIp != ''">#{allowedIp},</if>
            <if test="cidrMask != null">#{cidrMask},</if>
            <if test="description != null">#{description},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="state != null and state != ''">#{state},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>

    <update id="updateTaskAllowedIps" parameterType="TaskAllowedIps">
        update task_allowed_ips
        <trim prefix="SET" suffixOverrides=",">
            <if test="allowedIp != null and allowedIp != ''">allowed_ip = #{allowedIp},</if>
            <if test="cidrMask != null">cidr_mask = #{cidrMask},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
            <if test="state != null and state != ''">state = #{state},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTaskAllowedIpsById" parameterType="String">
        delete from task_allowed_ips where id = #{id}
    </delete>

    <delete id="deleteTaskAllowedIpsByIds" parameterType="String">
        delete from task_allowed_ips where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectTaskAllowedIpsByIp" resultMap="TaskAllowedIpsResult">
        <include refid="selectTaskAllowedIpsVo"/>
        where status = 'enabled' and allowed_ip = #{allowedIp}
    </select>


</mapper>