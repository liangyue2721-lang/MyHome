<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.make.stock.mapper.SellPriceAlertsMapper">

    <resultMap type="SellPriceAlerts" id="SellPriceAlertsResult">
        <result property="id" column="id"/>
        <result property="alertDate" column="alert_date"/>
        <result property="stockCode" column="stock_code"/>
        <result property="stockName" column="stock_name"/>
        <result property="latestPrice" column="latest_price"/>
        <result property="thresholdPrice" column="threshold_price"/>
        <result property="indexCount" column="index_count"/>
        <result property="isEnabled" column="is_enabled"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="stockApi" column="stock_api"/>
    </resultMap>

    <sql id="selectSellPriceAlertsVo">
        select id,
               alert_date,
               stock_code,
               stock_name,
               latest_price,
               threshold_price,
               index_count,
               is_enabled,
               created_at,
               updated_at,
               stock_api
        from sell_price_alerts
    </sql>

    <select id="selectSellPriceAlertsList" parameterType="SellPriceAlerts" resultMap="SellPriceAlertsResult">
        <include refid="selectSellPriceAlertsVo"/>
        <where>
            <if test="alertDate != null ">and alert_date = #{alertDate}</if>
            <if test="stockCode != null  and stockCode != ''">and stock_code like concat('%', #{stockCode}, '%')</if>
            <if test="stockName != null  and stockName != ''">and stock_name like concat('%', #{stockName}, '%')</if>
            <if test="latestPrice != null ">and latest_price = #{latestPrice}</if>
            <if test="thresholdPrice != null ">and threshold_price = #{thresholdPrice}</if>
            <if test="indexCount != null ">and index_count = #{indexCount}</if>
            <if test="isEnabled != null ">and is_enabled = #{isEnabled}</if>
            <if test="updatedAt != null ">and updated_at = #{updatedAt}</if>
            <if test="stockApi != null  and stockApi != ''">and stock_api = #{stockApi}</if>
        </where>
    </select>

    <select id="selectSellPriceAlertsById" parameterType="Long" resultMap="SellPriceAlertsResult">
        <include refid="selectSellPriceAlertsVo"/>
        where id = #{id}
    </select>

    <insert id="insertSellPriceAlerts" parameterType="SellPriceAlerts" useGeneratedKeys="true" keyProperty="id">
        insert into sell_price_alerts
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="alertDate != null">alert_date,</if>
            <if test="stockCode != null and stockCode != ''">stock_code,</if>
            <if test="stockName != null and stockName != ''">stock_name,</if>
            <if test="latestPrice != null">latest_price,</if>
            <if test="thresholdPrice != null">threshold_price,</if>
            <if test="indexCount != null">index_count,</if>
            <if test="isEnabled != null">is_enabled,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
            <if test="stockApi != null">stock_api,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="alertDate != null">#{alertDate},</if>
            <if test="stockCode != null and stockCode != ''">#{stockCode},</if>
            <if test="stockName != null and stockName != ''">#{stockName},</if>
            <if test="latestPrice != null">#{latestPrice},</if>
            <if test="thresholdPrice != null">#{thresholdPrice},</if>
            <if test="indexCount != null">#{indexCount},</if>
            <if test="isEnabled != null">#{isEnabled},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="stockApi != null">#{stockApi},</if>
        </trim>
    </insert>

    <update id="updateSellPriceAlerts" parameterType="SellPriceAlerts">
        update sell_price_alerts
        <trim prefix="SET" suffixOverrides=",">
            <if test="alertDate != null">alert_date = #{alertDate},</if>
            <if test="stockCode != null and stockCode != ''">stock_code = #{stockCode},</if>
            <if test="stockName != null and stockName != ''">stock_name = #{stockName},</if>
            <if test="latestPrice != null">latest_price = #{latestPrice},</if>
            <if test="thresholdPrice != null">threshold_price = #{thresholdPrice},</if>
            <if test="indexCount != null">index_count = #{indexCount},</if>
            <if test="isEnabled != null">is_enabled = #{isEnabled},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="stockApi != null">stock_api = #{stockApi},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSellPriceAlertsById" parameterType="Long">
        delete
        from sell_price_alerts
        where id = #{id}
    </delete>

    <delete id="deleteSellPriceAlertsByIds" parameterType="String">
        delete from sell_price_alerts where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateLatestPrice" parameterType="SellPriceAlerts">
        update sell_price_alerts
        <trim prefix="SET" suffixOverrides=",">
            <if test="latestPrice != null">latest_price = #{latestPrice},</if>
        </trim>
        where stock_code = #{stockCode}
    </update>

</mapper>