<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.make.stock.mapper.StockYearlyPerformanceMapper">

    <resultMap type="StockYearlyPerformance" id="StockYearlyPerformanceResult">
        <result property="id" column="id"/>
        <result property="date" column="date"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="newPrice" column="new_price"/>
        <result property="previousClose" column="previous_close"/>
        <result property="yearLowPrice" column="year_low_price"/>
        <result property="yearLowPriceRate" column="year_low_price_rate"/>
        <result property="thresholdPrice" column="threshold_price"/>
        <result property="weekHigh" column="week_high"/>
        <result property="yearHigh" column="year_high"/>
        <result property="lastYearHigh" column="last_year_high"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectStockYearlyPerformanceVo">
        select id, date, code, name, new_price, previous_close, year_low_price, year_low_price_rate, threshold_price, week_high, year_high, last_year_high, create_time, update_time
        from stock_yearly_performance
    </sql>

    <select id="selectStockYearlyPerformanceList" parameterType="StockYearlyPerformance"
            resultMap="StockYearlyPerformanceResult">
        <include refid="selectStockYearlyPerformanceVo"/>
        <where>
            <if test="code != null  and code != ''">and code = #{code}</if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="newPrice != null ">and new_price = #{newPrice}</if>
            <if test="previousClose != null ">and previous_close = #{previousClose}</if>
            <if test="yearLowPrice != null ">and year_low_price = #{yearLowPrice}</if>
            <if test="yearLowPriceRate != null ">and year_low_price_rate = #{yearLowPriceRate}</if>
            <if test="thresholdPrice != null ">and threshold_price = #{thresholdPrice}</if>
            <if test="weekHigh != null ">and week_high = #{weekHigh}</if>
            <if test="yearHigh != null ">and year_high = #{yearHigh}</if>
            <if test="lastYearHigh != null ">and last_year_high = #{lastYearHigh}</if>
            <if test="updateTime != null ">and update_time = #{updateTime}</if>
        </where>
    </select>

    <select id="selectStockYearlyPerformanceById" parameterType="Long" resultMap="StockYearlyPerformanceResult">
        <include refid="selectStockYearlyPerformanceVo"/>
        where id = #{id}
    </select>

    <insert id="insertStockYearlyPerformance" parameterType="StockYearlyPerformance" useGeneratedKeys="true"
            keyProperty="id">
        insert into stock_yearly_performance
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="date != null">date,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="newPrice != null">new_price,</if>
            <if test="previousClose != null">previous_close,</if>
            <if test="yearLowPrice != null">year_low_price,</if>
            <if test="yearLowPriceRate != null">year_low_price_rate,</if>
            <if test="thresholdPrice != null">threshold_price,</if>
            <if test="weekHigh != null">week_high,</if>
            <if test="yearHigh != null">year_high,</if>
            <if test="lastYearHigh != null">last_year_high,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="date != null">#{date},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="newPrice != null">#{newPrice},</if>
            <if test="previousClose != null">#{previousClose},</if>
            <if test="yearLowPrice != null">#{yearLowPrice},</if>
            <if test="yearLowPriceRate != null">#{yearLowPriceRate},</if>
            <if test="thresholdPrice != null">#{thresholdPrice},</if>
            <if test="weekHigh != null">#{weekHigh},</if>
            <if test="yearHigh != null">#{yearHigh},</if>
            <if test="lastYearHigh != null">#{lastYearHigh},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateStockYearlyPerformance" parameterType="StockYearlyPerformance">
        update stock_yearly_performance
        <trim prefix="SET" suffixOverrides=",">
            <if test="date != null">date = #{date},</if>
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="newPrice != null">new_price = #{newPrice},</if>
            <if test="previousClose != null">previous_close = #{previousClose},</if>
            <if test="yearLowPrice != null">year_low_price = #{yearLowPrice},</if>
            <if test="yearLowPriceRate != null">year_low_price_rate = #{yearLowPriceRate},</if>
            <if test="thresholdPrice != null">threshold_price = #{thresholdPrice},</if>
            <if test="weekHigh != null">week_high = #{weekHigh},</if>
            <if test="yearHigh != null">year_high = #{yearHigh},</if>
            <if test="lastYearHigh != null">last_year_high = #{lastYearHigh},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteStockYearlyPerformanceById" parameterType="Long">
        delete
        from stock_yearly_performance
        where id = #{id}
    </delete>

    <delete id="deleteStockYearlyPerformanceByIds" parameterType="String">
        delete from stock_yearly_performance where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectBatchByCodes" resultMap="StockYearlyPerformanceResult">
        select id,
        code
        from stock_yearly_performance

        <!-- 动态条件处理 -->
        <where>
            <!-- 处理空查询条件（可选） -->
            <if test="codes != null and codes.size() > 0">
                code IN
                <foreach item="code" index="index" collection="codes"
                         open="(" separator="," close=")">
                    #{code}
                </foreach>
            </if>
        </where>
    </select>

</mapper>